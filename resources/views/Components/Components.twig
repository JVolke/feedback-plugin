{% macro importTemplate(component) %}
    {% include "Feedback::Components." ~ component ~ "." ~ component ~ "_template" %}
{% endmacro %}

{% macro importComponent(component) %}
    {% include "Feedback::Components." ~ component ~ "." ~ component ~ "_component" %}
{% endmacro %}

{% macro importTemplate_namespaced(namespace, component) %}
    {% include "Feedback::Components." ~ namespace ~ "." ~ component ~ "." ~ component ~ "_template" %}
{% endmacro %}

{% macro importComponent_namespaced(namespace, component) %}
    {% include "Feedback::Components." ~ namespace ~ "." ~ component ~ "." ~ component ~ "_component" %}
{% endmacro %}

{% if services.template.getCurrentTemplate() == 'tpl.item' %}
    {{ _self.importTemplate("FeedbackForm") }}
    {{ _self.importTemplate("FeedbackList") }}
    {{ _self.importTemplate("FeedbackListEntry") }}
    {{ _self.importTemplate("FeedbackComment") }}
    {{ _self.importTemplate("FeedbackContainer") }}
    {{ _self.importComponent("FeedbackComment") }}
    {{ _self.importComponent("FeedbackForm") }}
    {{ _self.importComponent("FeedbackList") }}
    {{ _self.importComponent("FeedbackListEntry") }}
    {{ _self.importComponent("FeedbackContainer") }}
{% endif %}

{% if services.template.getCurrentTemplate() == 'tpl.confirmation' or isShopBuilder %}
    {{ _self.importTemplate_namespaced("Order", "FeedbackOrderContainer") }}
    {{ _self.importTemplate_namespaced("Order", "FeedbackOrderItem") }}
    {{ _self.importTemplate_namespaced("Order", "FeedbackOrderForm") }}
    {{ _self.importComponent_namespaced("Order", "FeedbackOrderContainer") }}
    {{ _self.importComponent_namespaced("Order", "FeedbackOrderItem") }}
    {{ _self.importComponent_namespaced("Order", "FeedbackOrderForm") }}
{% endif %}
<script type="text/javascript">
    window.feedbackPublicPath = "{{ plugin_path('Feedback') ~ '/js/dist/' }}"
</script>
<script src="{{ plugin_path('Feedback') }}/js/dist/feedback.js"></script>

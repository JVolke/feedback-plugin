<script type="x/template" id="vue-feedback-order-item">
    <div class="feedback-item mb-4" :class="'col-' + 12 / numberOfColumns">
        <div class="stars" @click="handleRating(0)">
            <form>
                <template v-for="starId in starIds">
                    <input v-model="feedback.ratingValue"
                        :class="starId.class"
                        :id="starId.id"
                        type="radio"
                        :value="starId.value"
                        name="ratingValue"
                        @click="handleRating(starId.value)"
                        :disabled="isRated"/>
                    <label :for="starId.id" class="new_star"></label>
                </template>
            </form>
        </div>
        <img :alt="item.name" :src="item.image" class="py-2">
        <div class="feedback-item-link"><a :href="item.url">${ item.name }</a></div>
    </div>
</script>

{% import "Ceres::Widgets.Helper.TwigBuilder" as Twig %}
{% import "Ceres::Widgets.Helper.WidgetHelper" as WidgetHelper %}

{% set customClass = widget.settings.customClass.mobile %}
{% set appearance = widget.settings.appearance.mobile %}

{% set spacingSettings = widget.settings.spacing %}
{% set inlinePadding   = WidgetHelper.getInlineSpacings(spacingSettings, spacingSettings.customPadding.mobile, "") %}
{% set inlineMargin    = WidgetHelper.getInlineSpacings(spacingSettings, "", spacingSettings.customMargin.mobile) %}
{% set spacingPadding  = WidgetHelper.getSpacingClasses(spacingSettings, spacingSettings.customPadding.mobile, "") %}
{% set spacingMargin   = WidgetHelper.getSpacingClasses(spacingSettings, "",spacingSettings.customMargin.mobile) %}

{{ Twig.import("ComponentLoader", "Feedback::Macros.ComponentLoader") }}
{{ Twig.print(Twig.call("ComponentLoader.importTemplate", ["FeedbackForm"])) }}
{{ Twig.print(Twig.call("ComponentLoader.importTemplate", ["FeedbackList"])) }}
{{ Twig.print(Twig.call("ComponentLoader.importTemplate", ["FeedbackListEntry"])) }}
{{ Twig.print(Twig.call("ComponentLoader.importTemplate", ["FeedbackComment"])) }}
{{ Twig.print(Twig.call("ComponentLoader.importTemplate", ["FeedbackContainer"])) }}

{% if not isPreview %}
    {{ Twig.set("feedbackItem", Twig.call("feedbackServices.feedback.getFeedback", [Twig.var("item")])) }}
    {{ Twig.set("item_id", "feedbackItem.item.documents[0].data.item.id") }}
    {{ Twig.set("variation_id", "feedbackItem.item.documents[0].data.variation.id") }}
    {{ Twig.set("counts", "feedbackItem.counts | json_encode") }}

    <div class="widget widget-feedback widget-{{ appearance | default("primary") }} {% if customClass | length > 0 %} {{ customClass }}{% endif %} {% if spacingMargin | length > 0 %} {{ spacingMargin }}{% endif %}"
            {% if inlineMargin | length > 0 %} style="{{ inlineMargin }}"{% endif %}>
        <feedback-container class="widget-inner"
                :item-id="{{ Twig.print("item_id") }}"
                :variation-id="{{ Twig.print("variation_id") }}"
                :counts="{{ Twig.print("counts") }}"
                padding-classes="{{ spacingPadding }}"
                padding-inline-styles="{{ inlinePadding }}">
        </feedback-container>
    </div>
{% else %}
    <div class="widget widget-feedback widget-{{ appearance | default("primary") }} {% if customClass | length > 0 %} {{ customClass }}{% endif %} {% if spacingMargin | length > 0 %} {{ spacingMargin }}{% endif %}"
            {% if inlineMargin | length > 0 %} style="{{ inlineMargin }}"{% endif %}>
        <feedback-container class="widget-inner"
                :item-id="0"
                :variation-id="0"
                :counts="{}">
        </feedback-container>
    </div>

    {#<div class="widget widget-feedback">
        Hier k√∂nnte ihre Werbung stehen!
    </div>#}
{% endif %}

